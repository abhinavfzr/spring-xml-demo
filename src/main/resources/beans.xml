<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!-- A simple bean definition -->
    <bean id = "actor" class = "com.stackroute.domain.Actor">
        <constructor-arg index="0" value="abhinav"> </constructor-arg>
        <constructor-arg index="1" value="male"> </constructor-arg>
        <constructor-arg index="2" value="14"> </constructor-arg>
    </bean>

    <bean name="movie" autowire="constructor" class="com.stackroute.domain.Movie" >
    </bean>

</beans>